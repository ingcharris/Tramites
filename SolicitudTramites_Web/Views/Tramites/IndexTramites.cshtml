@model IEnumerable<SolicitudTramites_Web.Models.Dto.TramitesDto>
@{
    ViewData["Title"] = "IndexTramites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Trámites</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Tramites" asp-action="CrearTramite" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Crear Nuevo Trámite</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre del Trámite</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.TramiteNombre</td>
                    <td>
                        <a asp-controller="Tramites" asp-action="ActualizarTramite" asp-route-tramiteId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="Tramites" asp-action="RemoverTramite" asp-route-tramiteId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
