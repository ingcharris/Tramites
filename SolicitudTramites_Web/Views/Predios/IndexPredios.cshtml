@model IEnumerable<SolicitudTramites_Web.Models.Dto.PrediosDto>
@{
    ViewData["Title"] = "IndexPredios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Lista de Predios</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Predios" asp-action="CrearPredio" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i> Crear Nuevo Predio</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>ID del Predio</th>
                <th>Nombre del Predio</th>
                <th>Trámite Asociado</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.PredioId</td>
                    <td>@item.PredioNombre</td>
                    <td>@item.Tramites.TramiteNombre</td>
                    <td>
                        <a asp-controller="Predios" asp-action="ActualizarPredio" asp-route-predioId="@item.PredioId" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="Predios" asp-action="RemoverPredio" asp-route-predioId="@item.PredioId" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
